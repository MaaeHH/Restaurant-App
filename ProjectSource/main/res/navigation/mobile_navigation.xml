    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_search">

    <fragment
        android:id="@+id/nav_user"
        android:name="com.example.restaurantapp.ui.login.LoginFragment"
        android:label="@string/menu_user"
        tools:layout="@layout/fragment_login" />

    <fragment
        android:id="@+id/nav_recommended"
        android:name="com.example.restaurantapp.ui.recommended.recommendedFragment"
        android:label="Recommended"
        tools:layout="@layout/fragment_profile" />

    <fragment
        android:id="@+id/nav_search"
        android:name="com.example.restaurantapp.ui.restaurantsearch.SearchFragment"
        android:label="@string/menu_search"
        tools:layout="@layout/fragment_search" />


