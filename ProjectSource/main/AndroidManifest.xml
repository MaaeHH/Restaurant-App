<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.restaurantapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.RestaurantApp">
        <activity
            android:name=".ui.RPageFragment.ReviewPageActivity"
            android:exported="false"
            android:label="@string/title_activity_review_page"
            android:theme="@style/Theme.RestaurantApp.NoActionBar" />
        <activity
            android:name=".ui.RPageFragment.RPageActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="false"
            android:label="@string/title_activity_rpage"
            android:theme="@style/Theme.RestaurantApp.Fullscreen" />
        <activity
            android:name=".ui.appPage.RPage"
            android:exported="false"
            android:label="@string/title_activity_rpage"
            android:theme="@style/Theme.RestaurantApp.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.RestaurantApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>